#!/bin/bash
rm *.lib
rm -rf SDL2
rm -rf live555
rm -rf lib*
tar -zxvf SDL2-2.0.4.tar.gz
cd SDL2-2.0.4
./configure && make -j && sudo make install
cd ../

tar -zxvf SDL2_net-2.0.1.tar.gz
cd SDL2_net-2.0.1
./configure && make -j && sudo make install
cd ../

tar -zxvf live555-latest.tar.gz
cd live
./genMakefiles linux
make -j && sudo make install
cd ../

tar -jxvf last_x264.tar.bz2
cd x264-snapshot-20161110-2245
./configure --enable-shared --enable-static
make && sudo make install
cd ../

tar -jxvf ffmpeg-3.2.tar.bz2
cd ffmpeg-3.2
./configure --enable-gpl --enable-libx264 --enable-shared
make && sudo make install
cd ../
